.form-input-feedback-password {
  pointer-events: auto;
  cursor: pointer;
  color: #aaa;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
  display: block;
  width: 38px;
  height: 38px;
  line-height: 38px;
  text-align: center;

  &:hover { color: #888; }
}

.form-help {
  @apply text-xs text-muted mt-1 text-xs;
}

.input-required:after {
  content: '*';
  color: #9f1006;
  padding-left: .3125rem;
}
