.font-tabular-nums {
  font-variant-numeric: tabular-nums;
}

.is-desktop .desktop-hidden {
  display: none;
}

.hanging-puntuation-first {
  hanging-punctuation: first;
}

.hide-empty:empty { display: none; }

.mobile-wide {
  @apply -mx-4;
}

@screen sm {
  .mobile-wide {
    @apply mx-0;
  }
}

.last\:mr-0:last-child { margin-right: 0; }

.prepend-dollar::before { content: '$ '; }

.small-caps { font-variant: small-caps; }

.top-2 {
  top: .5rem;
}

[v-cloak] { display: none; }
